<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4CAF50" >

        <!-- Left Section (Image) -->
        <ImageView
            android:id="@+id/iv_coupon_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coupon_plant_image"
            android:layout_marginEnd="8dp"/>

        <!-- Middle Section (Text Info) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingVertical="16dp"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/tv_coupon_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绿植299-100券"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_coupon_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ 100"
                    android:textColor="@color/red"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_coupon_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满299可用"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Right Section (Time Left and Button) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅剩下"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00 : 28 : 12"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/btn_remind_me"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="提醒我"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:textSize="12sp"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 