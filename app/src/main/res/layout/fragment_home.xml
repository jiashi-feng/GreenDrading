<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FFF8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 搜索按钮 -->
        <LinearLayout
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#C8F7C5"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp"
            android:clipToOutline="true"
            android:backgroundTint="#C8F7C5"
            android:layout_gravity="center"
            android:radius="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#333"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="搜索"
                android:textColor="#333"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- 轮播图 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/carouselViewPager"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="5dp"/>

        <!-- 三个按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="推荐"
                android:backgroundTint="#C8F7C5"
                android:textColor="#333"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/btnCareTips"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="养护技巧"
                android:backgroundTint="#C8F7C5"
                android:textColor="#333"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/btnMoreCategory"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="更多分类"
                android:backgroundTint="#C8F7C5"
                android:textColor="#333"/>
        </LinearLayout>

        <!-- 商品列表（静态模拟4个） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 商品项1 -->
            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginBottom="5dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:radius="16dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/luhui1"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp"
                    android:background="@android:color/darker_gray"
                    android:radius="12dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="药用植物"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品定价：20元\n市场价：19元\n商品定位：药用植物"
                        android:textSize="14sp"
                        android:textColor="#666"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginBottom="5dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:radius="16dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/sell_plant_10"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp"
                    android:background="@android:color/darker_gray"
                    android:radius="12dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉色小多肉"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品定价：10元\n市场价：13元\n商品定位：观赏植物"
                        android:textSize="14sp"
                        android:textColor="#666"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginBottom="5dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:radius="16dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/meigui"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp"
                    android:background="@android:color/darker_gray"
                    android:radius="12dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="玫瑰"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品定价：20元\n市场价：19元\n商品定位：观赏植物"
                        android:textSize="14sp"
                        android:textColor="#666"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginBottom="5dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:radius="16dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/chashu"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp"
                    android:background="@android:color/darker_gray"
                    android:radius="12dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="茶树"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品定价：70元\n市场价：84元\n商品定位：经济植物"
                        android:textSize="14sp"
                        android:textColor="#666"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>