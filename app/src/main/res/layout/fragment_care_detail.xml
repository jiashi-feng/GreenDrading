<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 横幅 -->
    <LinearLayout
        android:id="@+id/bannerLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="返回"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/careDetailBannerTitle"
            android:layout_width="-20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:text="养护详情"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 养护详情内容 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/plantImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sell_plant_10"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/careTipsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="养护技巧："
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/careTipsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_border"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/careTipsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点击查看养护技巧详情"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:ellipsize="none"
                    android:maxLines="1000"
                    android:scrollbars="vertical"/>

            </LinearLayout>

            <TextView
                android:id="@+id/toolsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所需工具："
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/toolsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这里是养护所需工具，例如花盆、土壤、园艺剪、洒水壶等。" 
                android:textColor="#666"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/commentsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论区："
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- 评论列表 -->
            <LinearLayout
                android:id="@+id/commentsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- 示例评论 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F0F0F0"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户A" 
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="这个养护技巧很有用！我的植物长势更好了。" 
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F0F0F0"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户B" 
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论区功能不错，期待更多养护内容。" 
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- 评论输入框 -->
            <EditText
                android:id="@+id/commentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="发表你的评论..."
                android:background="@drawable/edit_text_border"
                android:padding="12dp"
                android:minLines="3"
                android:gravity="top"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/submitCommentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交评论"
                android:layout_gravity="end"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout> 